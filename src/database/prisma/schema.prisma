// This is your Prisma schema file,
    // learn more about it in the docs: https://pris.ly/d/prisma-schema

    generator client {
    provider = "prisma-client-js"
    }

    datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
    }
    // Apenas exemplo, nao considere nada abaixo
    model user {
    id        String  @id @default(auto()) @map("_id") @db.ObjectId
    email     String?  @unique
    password  String?
    name      String? 
    role      String?
    }


    /// Apenas exemplo, nada definido sobre ser profile ou apenas roles na table user
    model profile {
    id        String  @id @default(auto()) @map("_id") @db.ObjectId
    userId    String? @unique
    teacher   String?
    student   String?
    }
